<?xml version="1.0" encoding="UTF-8"?>
<!-- #################### xinco DMS Configuration for Tomcat >=5.5 #######-->
<Context docBase="xinco" path="/xinco" reloadable="true">
    <!-- #################### PLEASE CONFIGURE #############################-->
    <!-- ### Params: username, password, url, driverClassName            ###-->
    <!-- ###################################################################-->
    <!-- ### MySQL:                                                      ###-->
    <!-- ### url: jdbc:mysql://localhost:3306/xinco?autoReconnect=true   ###-->
    <!-- ### driverClassName: com.mysql.jdbc.Driver                      ###-->
    <!-- ###################################################################-->
    <!-- ### PostgreSQL:                                                 ###-->
    <!-- ### url: jdbc:postgresql://localhost:5432/xinco                 ###-->
    <!-- ### driverClassName: org.postgresql.Driver                      ###-->
    <!-- ###################################################################-->
    <!-- ### Oracle:                                                     ###-->
    <!-- ### url: jdbc:oracle:thin:@//server.local:1521/<service name>   ###-->
    <!-- ### driverClassName: oracle.jdbc.driver.OracleDriver            ###-->
    <!-- ###################################################################-->
    <!-- ### H2:                                                         ###-->
    <!-- ### url: jdbc:h2:file:~/Xinco/data/xinco;CREATE=TRUE;           ###-->
    <!-- ### AUTO_SERVER=TRUE;LOCK_TIMEOUT=10000                         ###-->
    <!-- ### driverClassName: org.h2.Driver                              ###-->
    <!-- ### Note: For H2, make sure this values match the contents of   ###-->
    <!-- ### web.xml for proper shutdown of H2 database!                 ###-->
    <!-- ###################################################################-->
    <Resource auth="Container" driverClassName="${db.driver}"
              maxActive="100" maxIdle="30" maxWait="10000" name="jdbc/XincoDB"
              password="${db.password}" type="javax.sql.DataSource"
              url="${db.url}"
              username="${db.username}"/>
    <!-- Turn off session serialization -->
    <Manager pathname=""/>
    <!-- ################# Optional Configuration #################-->
    <!-- Database JNDI Name -->
    <Environment name="xinco/JNDIDB" override="false" type="java.lang.String" value="XincoPUJNDI"/>
    <!-- ################# ###################### #################-->
    <!-- Demo settings -->
    <!-- Warning! This will reset your database on 'demo-period' intervals so use with care
    Precautions have been put in place to check the database is an H2 embedded database before proceeding
    Please set value to false for use in production.-->
    <Environment name="xinco/demo" override="false" type="java.lang.Boolean" value="true"/>
    <Environment name="xinco/demo-period" override="false" type="java.lang.Long" value="86400000"/>
    <!-- ################# ###################### #################-->
</Context>
