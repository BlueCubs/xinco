<?xml version="1.0" encoding="UTF-8"?>

<!-- #################### xinco DMS Configuration for Tomcat >=5.5 ####################-->

<Context docBase="xinco" path="/xinco" reloadable="true">

  <!-- #################### PLEASE CONFIGURE #############################-->
  <!-- ### Params: username, password, url, driverClassName            ###-->
  <!-- ###################################################################-->
  <!-- ### MySQL:                                                      ###-->
  <!-- ### url: jdbc:mysql://localhost:3306/xinco?autoReconnect=true   ###-->
  <!-- ### driverClassName: com.mysql.jdbc.Driver                      ###-->
  <!-- ###################################################################-->
  <!-- ### PostgreSQL:                                                 ###-->
  <!-- ### url: jdbc:postgresql://localhost:5432/xinco                 ###-->
  <!-- ### driverClassName: org.postgresql.Driver                      ###-->
  <!-- ###################################################################-->
  <!-- factory="org.apache.commons.dbcp.BasicDataSourceFactory" maxActive="100"--> 
  <Resource auth="Container" driverClassName="com.mysql.jdbc.Driver" 
  factory="org.apache.commons.dbcp.BasicDataSourceFactory" maxActive="100"
  maxIdle="30" maxWait="10000" name="jdbc/XincoDB" type="javax.sql.DataSource" 
  url="jdbc:mysql://localhost:3307/xinco2?autoReconnect=true" username="root" password=""
  removeAbandoned="true" removeAbandonedTimeout="0"/>
  <!-- #################### ################ ####################-->

  <ResourceParams name="jdbc/XincoDB">
    <parameter>
      <name>factory</name>
      <value>org.apache.commons.dbcp.BasicDataSourceFactory</value>
    </parameter>
  </ResourceParams>
  
  <!-- Workflow can be in a different DB but it's within Xinco's by default-->
  
  <Resource auth="Container" driverClassName="com.mysql.jdbc.Driver" 
  factory="org.apache.commons.dbcp.BasicDataSourceFactory" maxActive="100"
  maxIdle="30" maxWait="10000" name="jdbc/XincoWorkflowDB" type="javax.sql.DataSource" 
  url="jdbc:mysql://localhost:3307/xinco2?autoReconnect=true" username="root" password=""
  removeAbandoned="true" removeAbandonedTimeout="0"/>
  <!-- #################### ################ ####################-->

  <ResourceParams name="jdbc/XincoWorkflowDB">
    <parameter>
      <name>factory</name>
      <value>org.apache.commons.dbcp.BasicDataSourceFactory</value>
    </parameter>
  </ResourceParams>

  <!-- ################# Optional Configuration #################-->
  <!-- Database JNDI Name -->
  <Environment name="xinco/JNDIDB" override="false" type="java.lang.String" value="java:comp/env/jdbc/XincoDB"/>
  <Environment name="xincoWorkflow/JNDIDB" override="false" type="java.lang.String" value="java:comp/env/jdbc/XincoWorkflowDB"/>
  <!-- ################# ###################### #################-->
</Context>
